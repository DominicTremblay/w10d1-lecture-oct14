<%= link_to 'All Movies', movies_path %>

<div class="media">
  <%= image_tag(@movie.image_url) %>
  <div class="media-body">
    <h5 class="mt-0"><%= @movie.title %></h5>

    <ul>
    
        <li>Director: <%= @movie.director %></li>
        <li>Runtime: <%= @movie.runtime_in_minutes %> minutes</li>
        <li>Release Date: <%= @movie.release_date %></li>
        <li>Description: <%= @movie.description %></li>
      
      </ul>

  </div>
</div>


<p>
<%= notice  %>
</p>

<h3>Add a Review</h3>

<%= form_with model: [@movie, @review] do |form| %>

<div class="form-group">
  <%= form.label :rating %>
  <%= form.text_field :rating %>
</div>
<div class="form-group">
  <%= form.label :comment %>
  <%= form.text_field :comment%>
</div>

<%= form.submit 'Add Review' %>

<% end %>


<h3>Reviews</h3>

<%= render @reviews %>